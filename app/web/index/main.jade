//其他频道
div.index-wrap.am-container
    //精彩饭趴
    section.perfect-wrap
        header.section-header.am-cf
            h2.am-fl='精彩饭趴'
            a(href='/channellist.html').am-fr='查看全部>>'
            span.tip HOT LIVE
        div#wonderfulList.viedo-content.am-g
            // 列表模板
            script#wonderfulItemTpl(type='text/html')
                | {{each data as item}}
                div.item.am-u-sm-3
                    a.top-link(href="{{item.status ===2? '/liveroom.html?roomId=':'/playback.html?roomId='}}{{item.roomId}}")
                        img(src="{{item.posterPic}}")
                        div.link-hover
                            | {{if item.status == 2}}
                            div.status.living
                            div.left-bottom.info
                                div.sub-info
                                    span.icons.chat
                                    | {{item.online}}
                                    span.icons.like
                                    | {{item.assemble}}
                            div.center.play
                            | {{else if item.status == 1}}
                            div.status.preview
                            div.left-bottom.time
                                div.sub-time
                                    | 直播时间: {{item.startTime}}
                            div.center.wait
                            | {{/if}}
                            div.right-top.gradient.boderRadAll_3
                                span='人气:'
                                | {{item.popularity}}
                            footer.gradient-up
                    div.anchor-info.am-cf
                        div.am-fl
                            div.title.am-text-truncate='{{item.roomName}}'
                            img.am-circle.avatar(src='{{item.creator.smallAvatar}}')
                            span.name='{{item.creator.nickName}}'
                        div.am-fr
                            button.am-btn.am-btn-red.boderRadAll_5(data-roomId='{{item.roomId}}')
                                i
                                span='顶上去'
                    footer.viedo-bg
                | {{/each}}
    //官方
    section.official-wrap
        header.section-header.am-cf
            h2.am-fl='官方频道'
            a(href='/channellist.html').am-fr='查看全部>>'
            span.tip='OFFICIAL CHANNEL'
        div#officialList.viedo-content.am-g.am-cf
